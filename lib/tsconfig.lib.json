{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmitHelpers": true,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "lib": ["es6", "dom", "es2015.iterable"],
    "baseUrl": ".",
    "paths": {
      "*": [
        "../node_modules/*",
        "../node_modules/tns-core-modules/*",
        "../node_modules/tns-platform-declarations/*.d.ts"
      ]
    },
    "typeRoots": [
      "../node_modules/@type",
      "./*.d.ts",
      "../node_modules/tns/tns-platform-declarations/*.d.ts"
    ],
    "types": ["node"]
  },
  "exclude": ["node_modules", "platforms"]
}
